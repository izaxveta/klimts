<%= form_for(:session, url: signin_path) do |f| %>
  <%= f.text_field :email, placeholder: "Email", required: true, class: 'signin__input email' %>
  <%= f.password_field :password, placeholder: 'Password', required: true, class: 'signin__input password' %>
  <%= f.submit 'Sign In', class: 'signin__button submit' %>
<% end %>