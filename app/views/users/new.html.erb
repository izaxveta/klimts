<%= form_for User.new do |f| %>
  <%= f.text_field :email, required: true, placeholder: "E-mail", class: 'form__registration__input email' %>
  <%= f.text_field :first_name, required: true, placeholder: "First Name", class: 'form__registration__input firstname' %>
  <%= f.text_field :last_name, required: true, placeholder: "Last Name", class: 'form__registration__input lastname' %>
  <%= f.password_field :password, required: true, placeholder: "Password", class: 'form__registration__input password' %>
  <%= f.password_field :password_confirmation, required: true, placeholder: "Confirm Password", class: 'form__registration__input confirmpassword' %>
  <%= f.submit "Register" %>
<% end %>