<%= render 'components/resource_form' do %>
  <%= form_for [:admin, Product.new] do |f| %>
    <%= f.text_field :name, required: true, placeholder: "Title", class: 'form__input product-title' %>
    <%= f.number_field :price, required: true, placeholder: "$$$", in: 0.01..99999.99, step: 0.01, class: 'form__input product-price' %>
    <%= f.text_area :description, required: true, placeholder: "A little about this product...", class: 'form__input product-description' %>
    <%= f.select :status, options_for_select(Product.statuses.keys.to_a[0..1]), class: 'form__input product-status' %>
    <%= f.number_field :quantity, value: 1,  min: 0, class: 'form__input product-quantity' %>
    <%= f.submit "Add New Item", class: 'form__button registration-button' %>
  <% end %>
<% end %>